&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="k">set&lt;/span> &lt;span class="nx">wildmode&lt;/span>&lt;span class="p">=&lt;/span>&lt;span class="nx">longest&lt;/span>:&lt;span class="nx">full&lt;/span>&lt;span class="p">,&lt;/span>&lt;span class="nx">full&lt;/span>
