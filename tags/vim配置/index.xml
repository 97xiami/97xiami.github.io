&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="c">&amp;#34;智能补全&lt;/span>
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="k">set&lt;/span> &lt;span class="nx">completeopt&lt;/span>&lt;span class="p">=&lt;/span>&lt;span class="nx">longest&lt;/span>&lt;span class="p">,&lt;/span>&lt;span class="nx">menu&lt;/span>
